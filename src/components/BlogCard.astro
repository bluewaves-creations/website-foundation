---
interface Props {
  title: string;
  description: string;
  slug: string;
  publishedAt: Date;
  author: string;
  image?: string;
  tags?: string[];
  featured?: boolean;
}

const { title, description, slug, publishedAt, author, image, tags = [], featured = false } = Astro.props;

const formattedDate = publishedAt.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

{featured ? (
  <a href={`/blog/${slug}`} class="group block">
    <article class="sm:grid sm:grid-cols-2 sm:gap-8">
      {image && (
        <div class="overflow-hidden rounded-2xl">
          <img
            src={image}
            alt={title}
            class="aspect-video h-full w-full object-cover transition-transform duration-500 group-hover:scale-[1.02]"
            loading="lazy"
          />
        </div>
      )}
      <div class="mt-5 sm:mt-0 flex flex-col justify-center">
        <div class="flex items-center gap-3 text-xs text-gray-500 dark:text-gray-400">
          <time datetime={publishedAt.toISOString()}>{formattedDate}</time>
          <span class="h-3 w-px bg-gray-300 dark:bg-gray-700" aria-hidden="true"></span>
          <span>{author}</span>
        </div>
        <h3 class="mt-3 text-2xl sm:text-3xl font-semibold tracking-tight text-gray-900 transition-colors duration-300 group-hover:text-gray-500 dark:text-gray-100 dark:group-hover:text-gray-400 line-clamp-2">
          {title}
        </h3>
        <p class="mt-3 text-base leading-relaxed text-gray-600 dark:text-gray-400 line-clamp-3">{description}</p>
        {tags.length > 0 && (
          <div class="mt-4 flex flex-wrap gap-x-3 gap-y-1">
            {tags.map((tag) => (
              <span class="text-xs uppercase tracking-widest text-gray-400 dark:text-gray-500">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </article>
  </a>
) : (
  <a href={`/blog/${slug}`} class="group block">
    <article>
      {image && (
        <div class="overflow-hidden rounded-2xl">
          <img
            src={image}
            alt={title}
            class="aspect-video h-full w-full object-cover transition-transform duration-500 group-hover:scale-[1.02]"
            loading="lazy"
          />
        </div>
      )}
      <div class="mt-5">
        <div class="flex items-center gap-3 text-xs text-gray-500 dark:text-gray-400">
          <time datetime={publishedAt.toISOString()}>{formattedDate}</time>
          <span class="h-3 w-px bg-gray-300 dark:bg-gray-700" aria-hidden="true"></span>
          <span>{author}</span>
        </div>
        <h3 class="mt-2 text-lg font-semibold tracking-tight text-gray-900 transition-colors duration-300 group-hover:text-gray-500 dark:text-gray-100 dark:group-hover:text-gray-400 line-clamp-2">
          {title}
        </h3>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 line-clamp-2">{description}</p>
        {tags.length > 0 && (
          <div class="mt-3 flex flex-wrap gap-x-3 gap-y-1">
            {tags.map((tag) => (
              <span class="text-xs uppercase tracking-widest text-gray-400 dark:text-gray-500">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </article>
  </a>
)}
