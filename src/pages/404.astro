---
import Base from "../layouts/Base.astro";
import Button from "../components/Button.astro";

export const prerender = true;
---

<Base title="Page not found">
  <div class="mx-auto flex max-w-xl flex-col items-center px-4 pt-24 pb-32 text-center sm:pt-32 sm:pb-40">
    <span class="text-sm font-semibold uppercase tracking-widest text-gray-400 dark:text-gray-500">404</span>
    <h1 class="mt-4 text-4xl font-semibold tracking-tight text-gray-900 dark:text-gray-100">Page not found</h1>
    <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">
      Sorry, we couldn't find the page you're looking for. It may have been moved or no longer exists.
    </p>
    <div class="mt-8">
      <Button href="/">Go home</Button>
    </div>
  </div>
</Base>
