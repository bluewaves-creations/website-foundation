{
  "description": "Quality guardrails for the Website Foundation template",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/validate-content.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
