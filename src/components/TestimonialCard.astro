---
interface Props {
  author: string;
  role: string;
  company?: string;
  avatar?: string;
  rating?: number;
  body: string;
}

const { author, role, company, avatar, rating, body } = Astro.props;
---

<div class="rounded-2xl bg-gray-50 p-6 shadow-sm ring-1 ring-gray-200 dark:bg-gray-900 dark:ring-gray-800">
  {rating && (
    <div class="mb-3 flex gap-0.5">
      {Array.from({ length: 5 }).map((_, i) => (
        <svg
          class:list={["h-4 w-4", i < rating ? "text-yellow-400" : "text-gray-300 dark:text-gray-700"]}
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>
  )}
  <blockquote class="text-sm text-gray-700 dark:text-gray-300 line-clamp-4">&ldquo;{body}&rdquo;</blockquote>
  <div class="mt-4 flex items-center gap-3">
    {avatar ? (
      <img src={avatar} alt={author} class="h-10 w-10 rounded-full object-cover" loading="lazy" />
    ) : (
      <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gray-200 text-sm font-bold text-gray-600 dark:bg-gray-800 dark:text-gray-400">
        {author.charAt(0)}
      </div>
    )}
    <div>
      <p class="text-sm font-semibold text-gray-900 dark:text-gray-100">{author}</p>
      <p class="text-xs text-gray-500 dark:text-gray-400">
        {role}{company && `, ${company}`}
      </p>
    </div>
  </div>
</div>
