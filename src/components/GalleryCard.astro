---
interface Props {
  title: string;
  description: string;
  image: string;
  slug: string;
  category: string;
}

const { title, image, slug, category } = Astro.props;
---

<a href={`/gallery/${slug}`} class="group relative block overflow-hidden rounded-2xl">
  <img
    src={image}
    alt={title}
    class="aspect-[3/4] w-full object-cover transition-transform duration-700 ease-out will-change-transform group-hover:scale-[1.03]"
    loading="lazy"
  />
  <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-gray-950/70 via-gray-950/0 transition-opacity duration-500 sm:opacity-0 sm:group-hover:opacity-100">
  </div>
  <div class="absolute inset-x-0 bottom-0 p-4 transition-all duration-500 sm:translate-y-2 sm:opacity-0 sm:group-hover:translate-y-0 sm:group-hover:opacity-100">
    <span class="text-xs uppercase tracking-widest text-white/70 truncate">{category}</span>
    <h3 class="mt-1 text-sm sm:text-base font-semibold text-white line-clamp-1">{title}</h3>
  </div>
</a>
